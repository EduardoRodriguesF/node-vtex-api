{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
